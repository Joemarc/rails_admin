= append(:body_class){ ' next-services ' }

- if @one_timers.any?
  .one-timers-container
    .one-timers-header
      .head
        .title
          Solo una vez

    .cards
      - @one_timers.each_with_index do |service,i|
        = render partial: 'common/service_card', locals: { service: service }

- @recurrences.each do |recurrence|
  .recurrence-header
    .head
      - if current_user.admin?
        .admin-info
          %span.icon-help-with-circle
          .text
            %div
              Recurrencia creada
              = I18n.l(recurrence.created_at, format: :future)
            %div
              = link_to RailsAdmin::Engine.routes.url_helpers.edit_path('Recurrence', recurrence.id), target: '_blank' do
                Ver en admin
      .badge
        Recurrente
        =image_tag("recurrence.png", {:title => 'Servicio recurrente'})
      .title
        Todos los #{ensure_plural(recurrence.weekday_in_spanish) }
      .small-letters
        = recurrence.friendly_time
        con
        = recurrence.aliada.name

      .action-link
        =link_to(edit_recurrence_users_path(user_id: @user.id, recurrence_id: recurrence.id, cancelar: :true), class: 'action-button-white size-medium') do
          %span.icon-cancel-circle.icon-button
          Cancelar todas las visitas

        =link_to(edit_recurrence_users_path(user_id: @user.id, recurrence_id: recurrence.id), class: 'action-button-white size-medium') do
          %span.icon-pencil.icon-button
          Modifcar todas las visitas


    %table.table-cards
      - recurrence.services_for_user.each do |service|
        = render partial: 'common/service_card', locals: { service: service }


- if @one_timers.empty? && @recurrences.empty?
  .service-card-wrapper.col-lg-6.new-service-card.vertical.empty
    .service-card
      = link_to new_service_users_path(@user) do
        Programa una nueva visita


= append :javascript do
  = javascript_include_tag 'next_services'
