= append(:body_class){ ' password_recovery ' }

.password_recovery-container.col-lg-12
  = render partial: 'common/messages'
  .password_recovery-form-wrapper
    .password_recovery-container
      =link_to root_path, { class: 'logo-container' } do
        =image_tag('logo-contrast.png', { :title => 'Aliada'})

      %h1 ¿Olvidaste tu contraseña?
      %p Escribe tu email y te enviaremos instrucciones para resetearla
      .password_recovery_form.form-control
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          .field
            %span.icon.icon-envelope
            = f.email_field :email, autofocus: true, placeholder: 'Correo electrónico'
          .actions
            = f.submit "Enviame instrucciones", class: 'action-button-pink'
