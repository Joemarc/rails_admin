= append(:body_class){ ' password_recovery ' }

.password_recovery-container.col-lg-12
  = render partial: 'common/messages'
  .password_recovery-form-wrapper
    .password_recovery-container
      =link_to root_path, { class: 'logo-container' } do
        =image_tag('logo-contrast.png', { :title => 'Aliada'})

      %h1 Cambia tu contraseña
      %p Esta será tu nueva contraseña
      .password_recovery_form.form-control
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
          = devise_error_messages!
          = f.hidden_field :reset_password_token
          .field
            %span.icon.icon-asterisk7
            = f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "Nueva contraseña"

          .field
            %span.icon.icon-asterisk7
            = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirma tu nueva contraseña"

          .actions
            = f.submit "Cambiar contraseña", class: 'action-button-pink'
