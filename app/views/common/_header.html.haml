%header.inner
  .container
    .row
      %a{href: '/', class: 'logo-container' }
        = image_tag 'logo-contrast.png', class: 'logo-contrast'
      .help-container
        - if user_signed_in?
          - if current_user.admin?
            = link_to @user.rails_admin_edit_user_path do
              Editar
              %span.admin-info
                %span.icon-help-with-circle
          %span.icon.icon-user
          %a{href: edit_users_path(@user), title: 'Mi cuenta', class: 'account-link' }
            = @user.name
          %a{href: new_service_users_path(@user), title: 'Programar nueva visita', class:'action-button-pink size-large'}
            Programar nueva visita

        - else
          %p.medium
            %icon.phone
            ¿Necesitas ayuda? Llámanos al (55)-6723-7041
            = link_to("Log in", new_user_session_path, { :class => 'login-button action-button-gray size-medium'})
