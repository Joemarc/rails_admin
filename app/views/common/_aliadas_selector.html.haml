= select_tag 'aliadas_selector', options_from_collection_for_select(@user.aliadas, :id, :name, '0'), class: 'selectpicker'

= append :javascript do
  = javascript_include_tag 'jquery.selectBoxIt'
  :javascript
    $("#aliadas_selector").selectBoxIt({
      // Trigger events on original dom element
      aggressiveChange: true,
      autoWidth: false
    })
