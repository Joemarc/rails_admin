.initial.summary-container.one-time
  %h1
    Resúmen

  %ul.summary
    %li{data: {bind: 'css: {checked: current_step() >= 1}'}}
      %span{data: {bind: 'text: "Duración del servicio: "+hours()+" horas"'}}
      %a.small-letters{data: {bind: 'visible: current_step() > 1, click: aliada.move_to_step.bind(1) '}} 
        %icon.pencil.small
        editar

    %li{data: {bind: 'css: {checked: is_address_done, unchecked: !is_address_done()}'}}
      %span{data: {bind: 'text: address'}}
      %a.small-letters{data: {bind: 'visible: is_address_done, click: aliada.move_to_step.bind(2) '}} 
        %icon.pencil.small
        editar

    %li{data: {bind: 'css: {checked: is_name_email_phone_done, unchecked: !is_name_email_phone_done()}'}}
      %span{data: {bind: 'text: name_email_phone'}}
      %a.small-letters{data: {bind: 'visible: is_name_email_phone_done, click: aliada.move_to_step.bind(3) '}} 
        %icon.pencil.small
        editar

    %li{data: {bind: 'css: {checked: current_step() >= 4, unchecked: current_step() < 4}'}}
      %span{data: {bind: 'text: date_hour'}}
      %a.small-letters{data: {bind: 'visible: current_step() > 4, click: aliada.move_to_step.bind(4) '}} 
        %icon.pencil.small
        editar

  .foot
    %span.hours{data: {bind: 'text: hours()+" horas:"'}}
    %span.cash{data: {bind: 'text: "$"+price()'}}
  .promotional-code{data: {bind: 'visible: current_step() == 5'}}
    %a
      APLICAR
    = text_field_tag 'promo-code', nil, placeholder: 'código promocional'

= initial_service_form.submit 'atras', id: 'previous_button'
= initial_service_form.submit 'Confirmar visita', id: 'next_button', class: 'action-button-pink size-extra-large', data: {bind: 'value: next_button_text'}
