.initial.summary-container.one-time
  %h1
    Resúmen

  %ul.summary
    %li{data: {bind: 'css: {checked: current_step() >= 1}'}}
      %span Duración del servicio: {{ hours }} horas 
      %a.small-letters{data: {bind: 'visible: current_step() > 1, click: function(){ go_to_step(1) } '}} 
        %icon.pencil.small
        editar

    %li{data: {bind: 'css: {checked: is_address_done, unchecked: !is_address_done()}'}}
      %span {{ address }}
      %a.small-letters{data: {bind: 'visible: (is_address_done() && current_step() !== 2), click: function(){ go_to_step(2) } '}} 
        %icon.pencil.small
        editar

    %li{data: {bind: 'css: {checked: is_name_email_phone_done, unchecked: !is_name_email_phone_done()}'}}
      %span {{ name_email_phone }}
      %a.small-letters{data: {bind: 'visible: (is_name_email_phone_done() && current_step() !== 3), click: function(){ go_to_step(3) } '}} 
        %icon.pencil.small
        editar

    %li{data: {bind: 'css: {checked: current_step() >= 4, unchecked: current_step() < 4}'}}
      %span {{ date_hour }}
      %a.small-letters{data: {bind: 'visible: current_step() > 4, click: function(){ go_to_step(4) } '}} 
        %icon.pencil.small
        editar

  .foot
    %span.hours {{ hours }} horas:
    %span.cash ${{ price }} 
  .promotional-code{data: {bind: 'visible: current_step() == 5'}}
    %a
      APLICAR
    = text_field_tag 'promo-code', nil, placeholder: 'código promocional'

= initial_service_form.submit 'Confirmar visita', id: 'next_button', class: 'action-button-pink size-extra-large', data: {bind: 'value: next_button_text, css: { disabled: !is_valid_step() }  '}
