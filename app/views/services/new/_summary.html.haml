.summary-container
  %h1
    Resúmen

  %ul.summary
    %li.checked
      %span{data: {bind: 'text_: "Duración del servicio: {{ hours }} horas "'}} 
      = link_to '#service_duration', class: 'small-letters' do
        %icon.pencil.small
        editar

    %li.checked
      - if @user.default_address
        %span #{@user.default_address.name}
      = link_to edit_users_path(@user), class: 'small-letters' do
        %icon.pencil.small
        editar

    %li.checked
      %span #{@user.name}, #{@user.email}, #{@user.phone}
      = link_to edit_users_path(@user), class: 'small-letters' do
        %icon.pencil.small
        editar

    %li{data: {bind: 'css: {checked: is_datetime_done, unchecked: !is_datetime_done()}'}}
      %span{data: {bind: 'text: friendly_datetime'}}
      = link_to '#service_datetime', class: 'small-letters' do
        %icon.pencil.small
        editar

  .foot
    %span.hours{data: {bind: 'text_: "{{ hours }} horas:"'}}
    %span.cash{data: {bind: 'text_: "${{ price }}"'}}
  .promotional-code
    %a
      APLICAR
    = text_field_tag 'promo-code', nil, placeholder: 'código promocional'

= initial_service_form.submit 'Confirmar visita', id: 'next_button', class: 'action-button-pink size-extra-large', data: {bind: 'css: { disabled: !invalid_form() }  '}

.aliada_seal
  = image_tag 'sello-de-garantia.png'
