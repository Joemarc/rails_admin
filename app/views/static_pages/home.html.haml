-# Home header
%section.search-section-wrapper

  %header.container
    %div.row.header-container
      %div.logo-container.col-lg-2
        = link_to image_tag("logo.png", :class => 'logo'), '/';
      %nav.nav-container.col-lg-10
        %ul.nav
          %li ¿Cómo funciona?
          %li Precios
          %li Preguntas Frencuentes
          %li
            =link_to("Log in", "/sign_in", { :class => 'action-button-gray'})


  %div.container
    %div.row.search-container
      %div.search-slogan-container.text-color-white.col-lg-12
        %h1.biggest.slogan
          Simplifica tu vida
          =image_tag("aliada-shine.png", :class => 'shine')
        %p.motto
          Limpiamos tu hogar

      %div.search-form-container.col-lg-12
        = form_tag initial_service_path do
          %fieldset
            %legend
              Pide una profesional de la limpieza en menos de un minuto desde $65/hr.
            %ol
              %li
                = text_field_tag('postal_code_id', '', {:placeholder => 'Calle, número, colonia'})
                = submit_tag('Programa tu visita', { :class => 'action-button size-large' })


%section.media-section-wrapper
  %div.container
    %div.row
      %div.media-section-container.col-lg-12
        %div.media-logo
          =image_tag("media_logos/chilango-logo.png", :title => 'Chilango')
        %div.media-logo
          =image_tag("media_logos/reforma-logo.png", :title => 'Reforma')
        %div.media-logo
          =image_tag("media_logos/cnnexpansion-logo.png", :title => 'Cnn Expansión')
        %div.media-logo
          =image_tag("media_logos/ibero-logo.png", :title => 'Ibero 90.9')


