= append(:body_class){ ' recurrences-show ' }
= append(:back_button_action){ ' back ' }

- canceled_class = @base_service.canceled? ? 'disabled' : ''

.recurrence-header{class: canceled_class}
  .head
    .badge
      Recurrente
      = @base_service.recurrence.user.name
      =image_tag("recurrence.png", {:title => 'Servicio recurrente'})
    .title
      Todos los #{ensure_plural(@base_service.recurrence.weekday_in_spanish) }
    .small-letters
      a partir del #{@base_service.friendly_date }

    .action-link
      =link_to("Modifcar todas las visitas pr√≥ximas", edit_service_users_path(user_id: @user.id, service_id: @base_service.id), {})


.cards{class: canceled_class}
  - @services.each_with_index do |service,index|
    = render partial: 'common/service_card', locals: { service: service }

